<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Layout.css" />
    <script src="https://kit.fontawesome.com/7de8aab842.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 py-0">
            <div class="container">

                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img class="mainLogo" src="./Resource/logo.png" alt="logo" loading="lazy">
                </a>

                <a class="navbar-brand banner" asp-area="" asp-page="/Index">School News</a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <img class="avatar" src="./Resource/logo.png" alt="avatar" loading="lazy">
                    </a>
                    <div class="notifyMnHolder">
                        <span class="text-dark icoTool">
                            <i class="fa fa-bell fa-2x" aria-hidden="true"></i>
                        </span>
                        <div class="notifyMn border-bottom box-shadow">
                            <p>There are no notify yet </p>
                        </div>
                    </div>

                    <span class="text-dark icoTool">
                        <i class="fa fa-arrow-right fa-2x" aria-hidden="true"></i>
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Forum
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
